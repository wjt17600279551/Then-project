<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.XiuGaiMiMaActivity"
    android:orientation="vertical"
    android:background="#122131">

    <RelativeLayout
        android:layout_marginTop="@dimen/dp_20"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:background="@drawable/nav_bg">
        <ImageView
            android:id="@+id/back_img"
            android:layout_marginTop="@dimen/dp_17"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_width="@dimen/dp_10"
            android:layout_height="@dimen/dp_15"
            android:src="@drawable/icon_back"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="修改密码"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/sp_18"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginLeft="@dimen/dp_145"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/dp_43"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_marginLeft="@dimen/dp_29"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请输入旧密码："
            android:textColor="#ffc7f5ff"
            android:textSize="@dimen/sp_16" />

        <EditText
            android:theme="@style/MyEdit"
            android:layout_marginLeft="@dimen/dp_44"
            android:layout_width="@dimen/dp_156"
            android:layout_height="@dimen/dp_30"
            android:background="@drawable/xiugaixinxi_input_01"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/dp_15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_marginLeft="@dimen/dp_29"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请输入新密码："
            android:textColor="#ffc7f5ff"
            android:textSize="@dimen/sp_16" />

        <EditText
            android:theme="@style/MyEdit"
            android:layout_marginLeft="@dimen/dp_44"
            android:layout_width="@dimen/dp_156"
            android:layout_height="@dimen/dp_30"
            android:background="@drawable/xiugaixinxi_input_01"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/dp_15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_marginLeft="@dimen/dp_29"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请再次输入新密码："
            android:textColor="#ffc7f5ff"
            android:textSize="@dimen/sp_16" />

        <EditText
            android:theme="@style/MyEdit"
            android:layout_marginLeft="@dimen/dp_13"
            android:layout_width="@dimen/dp_156"
            android:layout_height="@dimen/dp_30"
            android:background="@drawable/xiugaixinxi_input_01"/>
    </LinearLayout>

    <Button
        android:layout_marginTop="@dimen/dp_55"
        android:layout_gravity="center_horizontal"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/sp_16"
        android:text="提交"
        android:background="@drawable/yichang_btn_n"
        android:layout_width="@dimen/dp_160"
        android:layout_height="@dimen/dp_36"/>


</LinearLayout>