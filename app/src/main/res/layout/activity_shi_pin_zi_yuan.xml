<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ShiPinZiYuanActivity"
    android:orientation="vertical"
    android:background="#122131">

    <RelativeLayout
        android:layout_marginTop="@dimen/dp_20"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:background="@drawable/nav_bg">
        <ImageView
            android:id="@+id/back_img"
            android:layout_marginTop="@dimen/dp_17"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_width="@dimen/dp_10"
            android:layout_height="@dimen/dp_15"
            android:src="@drawable/icon_back"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="视频资源"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/sp_18"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginLeft="@dimen/dp_150"/>

        <ImageView
            android:id="@+id/diandian"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_70"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_15"
            android:src="@drawable/dian" />
    </RelativeLayout>

    <LinearLayout
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请输入时间："
            android:textColor="#ffc7f5ff"
            android:textSize="@dimen/sp_16" />

        <EditText
            android:theme="@style/MyEdit"
            android:textColorHint="#ff3d6a8b"
            android:textSize="@dimen/sp_10"
            android:hint="例：2019.06.20-2019.06.21"
            android:layout_marginLeft="@dimen/dp_13"
            android:layout_width="@dimen/dp_204"
            android:layout_height="@dimen/dp_30"
            android:background="@drawable/xiugaixinxi_input_01"/>
    </LinearLayout>

    <FrameLayout
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_29"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="@dimen/dp_302"
            android:layout_height="@dimen/dp_202"
            android:src="@drawable/tu"/>
        <TextView
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="XXX摄像头"
            android:textColor="#ff122131"
            android:textSize="@dimen/sp_16"/>
    </FrameLayout>

    <FrameLayout
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_29"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="@dimen/dp_302"
            android:layout_height="@dimen/dp_202"
            android:src="@drawable/tu"/>
        <TextView
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="XXX摄像头"
            android:textColor="#ff122131"
            android:textSize="@dimen/sp_16"/>
    </FrameLayout>



</LinearLayout>