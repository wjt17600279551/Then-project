<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.XiuGaiActivity"
    android:orientation="vertical"
    android:background="#122131">

    <RelativeLayout
        android:layout_marginTop="@dimen/dp_20"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:background="@drawable/nav_bg">
        <ImageView
            android:id="@+id/back_img"
            android:layout_marginTop="@dimen/dp_17"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_width="@dimen/dp_10"
            android:layout_height="@dimen/dp_15"
            android:src="@drawable/icon_back"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="修改基本信息"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/sp_18"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginLeft="@dimen/dp_127"/>
    </RelativeLayout>

    <FrameLayout
        android:layout_marginTop="@dimen/dp_30"
        android:layout_gravity="center"
        android:layout_width="@dimen/dp_90"
        android:layout_height="@dimen/dp_90">
        <ImageView
            android:layout_width="@dimen/dp_90"
            android:layout_height="@dimen/dp_90"
            android:background="@drawable/shape_tou_yuan"/>
        <ImageView
            android:id="@+id/toux"
            android:layout_gravity="center"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_80" />
    </FrameLayout>

    <TextView
        android:layout_marginTop="@dimen/dp_10"
        android:layout_gravity="center_horizontal"
        android:textSize="@dimen/sp_16"
        android:textColor="#FFFFFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="更换头像"/>

    <LinearLayout
        android:layout_marginTop="@dimen/dp_74"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_marginLeft="@dimen/dp_77"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="姓名："
            android:textColor="#ffc7f5ff"
            android:textSize="@dimen/sp_16" />

        <EditText
            android:theme="@style/MyEdit"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_width="@dimen/dp_204"
            android:layout_height="@dimen/dp_30"
            android:background="@drawable/xiugaixinxi_input_01"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/dp_15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_marginLeft="@dimen/dp_60"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机号："
            android:textColor="#ffc7f5ff"
            android:textSize="@dimen/sp_16" />

        <EditText
            android:theme="@style/MyEdit"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_width="@dimen/dp_204"
            android:layout_height="@dimen/dp_30"
            android:background="@drawable/xiugaixinxi_input_01"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/dp_15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_marginLeft="@dimen/dp_28"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请选择组织："
            android:textColor="#ffc7f5ff"
            android:textSize="@dimen/sp_16" />
        <LinearLayout
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_width="@dimen/dp_204"
            android:layout_height="@dimen/dp_30"
            android:orientation="horizontal"
            android:background="@drawable/xiugaixinxi_input_01">

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/spinners"></Spinner>
        </LinearLayout>



        <!--<EditText-->
            <!--android:layout_marginLeft="@dimen/dp_8"-->
            <!--android:layout_width="@dimen/dp_204"-->
            <!--android:layout_height="@dimen/dp_30"-->
            <!--android:background="@drawable/xiugaixinxi_input_01"/>-->
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/dp_15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_marginLeft="@dimen/dp_77"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="职位："
            android:textColor="#ffc7f5ff"
            android:textSize="@dimen/sp_16" />

        <EditText
            android:theme="@style/MyEdit"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_width="@dimen/dp_204"
            android:layout_height="@dimen/dp_30"
            android:background="@drawable/xiugaixinxi_input_01"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/dp_15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_marginLeft="@dimen/dp_77"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="部门："
            android:textColor="#ffc7f5ff"
            android:textSize="@dimen/sp_16" />

        <EditText
            android:theme="@style/MyEdit"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_width="@dimen/dp_204"
            android:layout_height="@dimen/dp_30"
            android:background="@drawable/xiugaixinxi_input_01"/>
    </LinearLayout>

    <Button
        android:layout_marginTop="@dimen/dp_55"
        android:layout_gravity="center_horizontal"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/sp_16"
        android:text="提交"
        android:background="@drawable/yichang_btn_n"
        android:layout_width="@dimen/dp_160"
        android:layout_height="@dimen/dp_36"/>



</LinearLayout>