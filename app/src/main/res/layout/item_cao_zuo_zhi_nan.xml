<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#122131">

    <RelativeLayout
        android:layout_marginTop="@dimen/dp_20"
        android:layout_gravity="center_horizontal"
        android:layout_width="@dimen/dp_330"
        android:layout_height="@dimen/dp_50"
        android:orientation="horizontal"
        android:background="@drawable/yichangliebiao_message_bg">
        <TextView
            android:id="@+id/jitg"
            android:layout_marginLeft="@dimen/sp_15"
            android:textSize="@dimen/sp_13"
            android:layout_marginTop="@dimen/dp_15"
            android:textColor="#BCEBF6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A类设备操作指南"/>
        <TextView
            android:layout_marginRight="@dimen/dp_17"
            android:layout_alignParentRight="true"
            android:id="@+id/tgsj"
            android:layout_marginTop="@dimen/dp_25"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2019年6月6日"
            android:textColor="#ffc4f4ff"
            android:textSize="10sp" />
    </RelativeLayout>

</LinearLayout>