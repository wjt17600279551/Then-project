<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.Fragment4"
    android:orientation="vertical"
    android:background="#122131">

    <RelativeLayout
        android:layout_marginTop="@dimen/dp_20"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:background="@drawable/nav_bg">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="个人中心"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/sp_18"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginLeft="@dimen/dp_145"/>
    </RelativeLayout>
    <ImageView
        android:id="@+id/tou"
        android:src="@drawable/ic_aaa"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_gravity="center_horizontal"
        android:layout_width="@dimen/dp_80"
        android:layout_height="@dimen/dp_80" />
    <TextView
        android:layout_marginTop="@dimen/dp_10"
        android:layout_gravity="center_horizontal"
        android:textSize="@dimen/sp_16"
        android:textColor="#FFFFFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="宋 江"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.CardView
            android:layout_marginTop="@dimen/dp_32"
            app:cardMaxElevation="@dimen/dp_90"
            app:cardBackgroundColor="@color/colorCard"
            android:id="@+id/cardview"
            app:cardCornerRadius="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_25"
            android:layout_width="@dimen/dp_150"
            android:layout_height="@dimen/dp_100">
            <ImageView
                android:layout_width="@dimen/dp_35"
                android:layout_height="@dimen/dp_35"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_20"
                android:src="@drawable/gerenzhongxin_icon_01"/>
            <TextView
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="修改个人信息"
                android:textColor="#FFFFFF"/>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_marginTop="@dimen/dp_32"
            app:cardMaxElevation="@dimen/dp_90"
            app:cardBackgroundColor="@color/colorCard"
            app:cardCornerRadius="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_190"
            android:layout_width="@dimen/dp_150"
            android:layout_height="@dimen/dp_100">
            <ImageView
                android:layout_width="@dimen/dp_35"
                android:layout_height="@dimen/dp_35"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_20"
                android:src="@drawable/gerenzhongxin_icon_02"/>
            <TextView
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="修改密码"
                android:textColor="#FFFFFF"/>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_marginTop="@dimen/dp_145"
            app:cardMaxElevation="@dimen/dp_90"
            app:cardBackgroundColor="@color/colorCard"
            app:cardCornerRadius="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_190"
            android:layout_width="@dimen/dp_150"
            android:layout_height="@dimen/dp_100">
            <ImageView
                android:layout_width="@dimen/dp_35"
                android:layout_height="@dimen/dp_35"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_20"
                android:src="@drawable/gerenzhongxin_icon_04"/>
            <TextView
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="修改密码"
                android:textColor="#FFFFFF"/>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_marginTop="@dimen/dp_145"
            app:cardMaxElevation="@dimen/dp_90"
            app:cardBackgroundColor="@color/colorCard"
            app:cardCornerRadius="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_25"
            android:layout_width="@dimen/dp_150"
            android:layout_height="@dimen/dp_100">
            <ImageView
                android:layout_width="@dimen/dp_35"
                android:layout_height="@dimen/dp_35"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_20"
                android:src="@drawable/gerenzhongxin_icon_03"/>
            <TextView
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="修改密码"
                android:textColor="#FFFFFF"/>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_marginTop="@dimen/dp_258"
            app:cardMaxElevation="@dimen/dp_90"
            app:cardBackgroundColor="@color/colorCard"
            app:cardCornerRadius="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_190"
            android:layout_width="@dimen/dp_150"
            android:layout_height="@dimen/dp_100">
            <ImageView
                android:layout_width="@dimen/dp_35"
                android:layout_height="@dimen/dp_35"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_20"
                android:src="@drawable/gerenzhongxin_icon_06"/>
            <TextView
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="修改密码"
                android:textColor="#FFFFFF"/>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_marginTop="@dimen/dp_258"
            app:cardMaxElevation="@dimen/dp_90"
            app:cardBackgroundColor="@color/colorCard"
            app:cardCornerRadius="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_25"
            android:layout_width="@dimen/dp_150"
            android:layout_height="@dimen/dp_100">
            <ImageView
                android:layout_width="@dimen/dp_35"
                android:layout_height="@dimen/dp_35"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_20"
                android:src="@drawable/gerenzhongxin_icon_05"/>
            <TextView
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="修改密码"
                android:textColor="#FFFFFF"/>
        </android.support.v7.widget.CardView>

        <ImageView
            android:layout_marginTop="@dimen/dp_60"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shape_me"/>

    </FrameLayout>

</LinearLayout>